  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="3.1.0" />
    <PackageReference Include="PInvoke.Kernel32" Version="0.6.49" />
    <PackageReference Include="PInvoke.User32" Version="0.6.49" />
  </ItemGroup>

</Project>